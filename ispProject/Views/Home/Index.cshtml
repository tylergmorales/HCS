@{
    ViewBag.Title = "Home Page";
}

@if (Request.IsAuthenticated)
{
<div class="row">
    @if (ViewBag.isDisabled != true)
    {
        <div class="col-sm-12">
            
            <div class="panel panel-default col-sm-4">
                <a href="~/patients/PatientLookup">
                    <div class="panel-body centerText">
                       
                            <i class="fa fa-search fa-3x" aria-hidden="true"></i>
                      
                        <h3>Lookup Patient</h3>
                    </div>
                </a>
            </div>
            <div class="panel panel-default col-sm-4">
                <a href="~/patients/PatientCheckIn">
                    <div class="panel-body centerText">

                        <i class="fa fa-users fa-3x" aria-hidden="true"></i>

                        <h3>Checked In Patients</h3>
                    </div>
                </a>
            </div>
            <div class="panel panel-default col-sm-4">
                <a href="~/patients/PatientLookup">
                    <div class="panel-body centerText">

                        <i class="fa fa-question-circle-o fa-3x" aria-hidden="true"></i>

                        <h3>More To Follow</h3>
                    </div>
                </a>
            </div>
        </div>
    }
    @if (ViewBag.isDisabled == true)
    {
        <div class="panel panel-default mainPanels col-md-offset-3 col-md-6">
            <a href="~/patients/PatientLookup">
                <div class="panel-body centerText">
                    <h1>
                        <i class="fa fa-search fa-5x" aria-hidden="true"></i>
                    </h1>
                    <h3>Lookup Patient</h3>
                </div>
            </a>
        </div>
    }
</div>
    }

@if (!Request.IsAuthenticated)
{
    using (Html.BeginForm("SignIn", "users"))
    {
    @Html.AntiForgeryToken()
    <div class="panel">
        <div class="panel-body">
            @if (TempData["success"] == null)
            {
                <h3>Welcome, Please log in.</h3>
            }
            else
            {
                <h4 style="color:green;">@TempData["success"]</h4>
            }
            <br />
            <h4 style="color:red;">@TempData["error"]</h4>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email Address" required="required"/>
                    </div>
                </div>
                 
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="required"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Sign In" class="btn btn-primary col-sm-offset-1 col-sm-8" />
                    </div>
                    <br />
                    <p class="col-md-12" style="text-align: center">@Html.ActionLink("Don't have an account?", "create", "users")</p>
                </div>
            </div>
        </div>
    </div>
    }
}