
@{
    ViewBag.Title = "SignIn";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (!Request.IsAuthenticated)
    {
        <div class="panel">
            <div class="panel-body">
                <h3>Welcome to Waukesha Healthcare Center Systems. Please log in.</h3>
                <br />
                <h4 style="color:red;">@TempData["error"]</h4>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email Address" required="required"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="required"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Sign In" class="btn btn-default" />
                            @Html.ActionLink("Don't have an account?", "create", "users")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
