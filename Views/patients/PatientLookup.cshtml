
@{
    ViewBag.Title = "Patient Lookup";
}
<div class="panel">
    <div class="panel-body">
        <!--Patient lookup form-->
        <h2>Look up patient</h2>
        <div class="col-sm-12">@ViewBag.statusMessage</div>
        <form class="form-inline" id="lookupForm" method="post" action="PatientLookup">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="mrn">MRN</label>
                        <input type="text" name="mrn" id="mrn" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="ssn">SSN</label>
                        <input type="text" name="ssn1" id="ssn" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="last">Last Name</label>
                        <input type="text" name="last" id="last" class="form-control" />
                    </div>
                    <div style="vertical-align: bottom" class="form-group">
                        <button type="submit" name="button" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@if (ViewBag.patientFound == false)
{
    <h4 class="text-danger">Patient not found. Would you like to create a patient?</h4>
            <form method="POST" action="CreateNew" id="createNew">
                <div class="form-group">
                    <label for="ssn">Social Security Number:</label>
                    <input type="number" name="ssn" id="ssn" class="form-control" placeholder="SSN" />
                </div>
                <button class="btn btn-primary" type="submit">Create</button>
            </form>

}
